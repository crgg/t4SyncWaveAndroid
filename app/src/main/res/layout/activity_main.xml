<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.room.RoomActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:id="@+id/header"
        android:gravity="center_vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back"
            android:src="@drawable/ic_back"
            android:tint="@color/primary_color"
            android:background="@null"
            android:layout_width="46dp"
            android:layout_height="46dp"/>

        <TextView
            android:id="@+id/roomName"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="5dp"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/selectAudioBtn"
            android:visibility="gone"
            android:src="@drawable/ic_add_song"
            android:background="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/musicListRv"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/actions_container"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="0dp"/>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/disconnectRoom"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/musicListRv"
        app:layout_constraintEnd_toEndOf="@id/musicListRv"
        android:src="@drawable/ic_exit"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <com.t4app.t4syncwave.ui.AudioPlayerView
        android:id="@+id/actions_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>